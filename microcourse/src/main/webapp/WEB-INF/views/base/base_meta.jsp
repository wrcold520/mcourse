<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!-- charset -->
<meta charset="utf-8">
<!-- viewport -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui">

<!-- Add to homescreen for Safari on iOS -->
<%-- ios --%>
<!-- 添加至主屏, 从主屏进入会隐藏地址栏和状态栏, 全屏(content="yes") -->
<meta name="apple-mobile-web-app-capable" content="yes">

<!-- 系统顶栏的颜色(content = black、white 和 black-translucent)选其一就可以 -->
<!-- <meta name="apple-mobile-web-app-status-bar-style" content="black"> -->
<!-- <meta name="apple-mobile-web-app-status-bar-style" content="white"> -->
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

<!-- 指定标题 -->
<meta name="apple-mobile-web-app-title" content="MicroCourse">

<!-- 指定icon, 建议PNG格式-->
<link rel="apple-touch-icon" href="${ctx }/static/img/icon/icon_mcourse_144x144.png">
<link rel="apple-touch-icon" sizes="76x76" href="${ctx }/static/img/icon/icon_mcourse_76x76.png">
<link rel="apple-touch-icon" sizes="120x120" href="${ctx }/static/img/icon/icon_mcourse_120x120.png">
<link rel="apple-touch-icon" sizes="152x152" href="${ctx }/static/img/icon/icon_mcourse_152x152.png">

<!-- Add to homescreen for Chrome on Android -->
<meta name="mobile-web-app-capable" content="yes">
<link rel="icon" sizes="196x196" href="${ctx }/static/img/icon/icon_mcourse_196x196.png">

